    "components": {
        "schemas": {
            "PaginationMeta": {
                "properties": {
                    "page_size": {
                        "type": "integer",
                        "example": 10
                    },
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "total_pages": {
                        "type": "integer",
                        "example": 2
                    }
                },
                "type": "object"
            },
            "ApiResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "data": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ValidationErrorResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "error"
                    },
                    "errors": {
                        "type": "object",
                        "example": {
                            "name": [
                                "The name field is required.",
                                "Too short."
                            ]
                        },
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "CityRequest": {
                "title": "City Request Model",
                "description": "Payload for creating or updating a city",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "The name of the city",
                        "type": "string",
                        "maxLength": 255,
                        "minLength": 2,
                        "example": "Berlin"
                    }
                },
                "type": "object"
            },
            "CityDto": {
                "title": "City Model",
                "description": "Data transfer object representing a city entity",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
                    },
                    "name": {
                        "type": "string",
                        "example": "London"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-12-21T15:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-12-21T15:00:00Z",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "CreateStockRequest": {
                "title": "Stock Model",
                "description": "Data transfer object representing a stock entity",
                "required": [
                    "city_id",
                    "address",
                    "lat",
                    "lng"
                ],
                "properties": {
                    "city_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "address": {
                        "type": "string",
                        "example": "Baker st. 221b"
                    },
                    "lat": {
                        "type": "number",
                        "format": "float",
                        "example": "51.523767"
                    },
                    "lng": {
                        "type": "number",
                        "format": "float",
                        "example": "-0.1585557"
                    }
                },
                "type": "object"
            },
            "NearbyStockRequest": {
                "title": "Nearby Stock Request Model",
                "description": "Data transfer object for requesting nearby stocks based on latitude and longitude",
                "required": [
                    "lat",
                    "lng"
                ],
                "properties": {
                    "lat": {
                        "type": "number",
                        "format": "float",
                        "example": -65.38491
                    },
                    "lng": {
                        "type": "number",
                        "format": "float",
                        "example": 170.51276
                    }
                },
                "type": "object"
            },
            "NearbyStockDto": {
                "title": "Nearby Stock Response Model",
                "description": "Data transfer object representing a nearby stock with its distance",
                "properties": {
                    "stock": {
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/StockDto"
                            },
                            {
                                "properties": {
                                    "city": {
                                        "$ref": "#/components/schemas/CityDto"
                                    }
                                },
                                "type": "object"
                            }
                        ]
                    },
                    "distance_meters": {
                        "type": "number",
                        "format": "float",
                        "example": 6007911.53
                    }
                },
                "type": "object"
            },
            "StockDto": {
                "title": "Stock Model",
                "description": "Data transfer object representing a stock entity",
                "required": [
                    "id",
                    "city_id",
                    "address",
                    "lat",
                    "lng"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "city_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "address": {
                        "type": "string",
                        "example": "Baker st. 221b"
                    },
                    "lat": {
                        "type": "number",
                        "format": "float",
                        "example": "51.523767"
                    },
                    "lng": {
                        "type": "number",
                        "format": "float",
                        "example": "-0.1585557"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "UpdateStockRequest": {
                "title": "Stock Model",
                "description": "Data transfer object representing a stock entity",
                "properties": {
                    "city_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "address": {
                        "type": "string",
                        "example": "Baker st. 221b"
                    },
                    "lat": {
                        "type": "number",
                        "format": "float",
                        "example": "51.523767"
                    },
                    "lng": {
                        "type": "number",
                        "format": "float",
                        "example": "-0.1585557"
                    }
                },
                "type": "object"
            }
        },
        "parameters": {
